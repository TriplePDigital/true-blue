---
import Button from './Button.tsx'
import { ArrowDownCircle } from 'react-feather'
import { Link } from 'react-scroll'
---

<section class=" relative h-screen flex items-center justify-center">
	<div class="absolute w-full h-full bg-overlay z-ng-1"></div>
	<img class="hero z-ng-2 relative" src="/assets/hero.jpg" alt="" />
	<div class="absolute top-1/3 h-2/3">
		<h1 class="text-5xl font-bold text-primary w-2/3 text-center mx-auto">
			Bring a friend and your wash is free
		</h1>
		<span
			class="text-white block w-2/3 mx-auto text-center mt-6 mb-6 italic font-normal"
			>"If ye shall ask anything in my name I will do it" <br /> - John 14:14</span>
		<div class="mx-auto flex flex-row justify-center items-center">
			<Button variant="primary">See our work</Button>
			<Button variant="secondary">Contact us</Button>
		</div>
		<div>
			<Link
				className="cursor-pointer"
				to="next"
				spy={true}
				smooth={true}
				duration={500}>
				<Button variant="icon">
					<ArrowDownCircle size={24} className="mx-2" />
					Scroll down</Button>
			</Link>
		</div>
	</div>
</section>

<style>
	.hero {
		width: 100%;
		height: 100%;
		object-fit: cover;
		object-position: center;
	}
</style>
